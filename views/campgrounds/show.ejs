<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3 col-sm-12">
			<p class="lead">Yelp Camp</p>
			<div class="list-group">
				<a href="#" class="list-group-item list-group-item-action active">Option 1</a>
				<a href="#" class="list-group-item list-group-item-action">Option 2</a>
				<a href="#" class="list-group-item list-group-item-action">Option 3</a>
			</div> 
		</div> 
		<div class="col-md-9 col-sm-12">
			<div class="thumbnail">			
				<img class="img-responsive" src="<%= campground.image %>">  
				<div class="caption-full" id="campgroundDetails">
					<h4 class="pull-right">$9</h4>
					<h4><a><%= campground.name %></a></h4>
					<p><%= campground.desc %></p>					
					<% if(campground.createdBy.username) { %>
						<% if((currentUser != null) && (campground.createdBy.username == currentUser.username)) { %>
							<p>Added by you</p>
						<% } else { %>				
							<p>Added by <%= campground.createdBy.username %></p>
						<% } %>				
					<% } %>				
					<% if((currentUser != null) && (campground.createdBy.username == currentUser.username)) { %>
						<a href="/campgrounds/<%= campground._id %>/edit"><button type="button" class="btn btn-primary">Edit</button></a>
						<form style="display:inline" id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger">Delete</button> 
						</form>
					<% } %>				
				</div>
			</div>
			<div class="well">
				<div class="text-right">					
					<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add Comment</a>
				</div>
				<hr>
				<%	campground.comments.forEach(function(comment) {		%>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">5 days ago</span>
							<p>
								<%= comment.text %>
							</p>	
						</div>
					</div>
				<%	});	%>	
			</div>

		</div> 
	</div>
	

</div>


<%- include("../partials/footer") %>